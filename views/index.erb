<div class="modal hide" id="login_modal">
    <div class="modal-header">
        <button type="button" class="close"></button>
        <h3>Login</h3>
    </div>
    <form action="/login" method="post" autocomplete="off">
        <div class="modal-body" id="login_modal_content">
            <p>
                <label for="id">username: </label>
                <input type="text" id="id" name="username" class="modal_input_box" autofocus="autofocus" />
            </p>

            <p>
                <label for="pass">password: </label>
                <input type="password" id="pass" name="password" class="modal_input_box"/>
            </p>

            <p>Forgot your password? Click <a href="#" class="index_links">here</a></p>
        </div>

    <div class="modal-footer">
        <span class="server_errors" id="login_failed"><%= session[:e_login] %></span>
        <div class="button_case_create_organization_and_space">
            <button type="button" class="btn btn_right_create_organization_and_space cancel"><span class="line">| </span>Cancel</button>
            <button type="submit" class="btn btn_left_create_organization_and_space ok"><span class="line">| </span>Login </button>
        </div>
    </div>
    </form>
</div>

<div class="modal hide" id="signup_modal">
    <form action="/signup" method="post" autocomplete="off" id="sign_up">
        <div class="modal-header">
            <button type="button" class="close"></button>
            <h3>Sign Up</h3>
        </div>
            <div class="modal-body" id="signup_modal_content">
                <p>
                    <label for="email">e-mail: </label>
                    <input type="text" id="email" name="email" class="modal_input_box" placeholder="... email" />
                </p>

                <p>
                    <label for="password">Password: </label>
                    <input type="password" id="password" name="password" class="modal_input_box" placeholder="... password" />
                </p>

                <p>
                    <label for="confirm_password">Confirm Password: </label>
                    <input type="password" id="confirm_password" name="confirm_password" class="modal_input_box" placeholder="... confirm password" />
                </p>

                <p>
                    <label for="first_name">First Name: </label>
                    <input type="text" id="first_name" name="first_name" class="modal_input_box" placeholder="... first name" />
                </p>

                <p>
                    <label for="last_name">Last Name: </label>
                    <input type="text" id="last_name" name="last_name" class="modal_input_box" placeholder="... last name" />
                </p>
            </div>

        <div class="modal-footer sign_up_footer_modal">
            <p><span id="show_modal_errors"></span></p>
            <span class="server_errors" id="sign_up_failed"><%= session[:e_sign_up] %></span>
            <div class="button_case_create_organization_and_space">
                <a href="#" class="btn btn_right_create_organization_and_space cancel"><span class="line">| </span>Cancel</a>
                <button type="submit" class="btn btn-success btn_left_create_organization_and_space ok"><span class="line">| </span>Sign up </button>
            </div>
        </div>
    </form>
</div>
