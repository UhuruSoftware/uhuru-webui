<div class="breadcrumb" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
  <span class="breadcrumb_element">/&nbsp;</span><a href="<%= Uhuru::Webui::SinatraRoutes::ORGANIZATIONS %>" class="breadcrumb_link">organizations</a>
</div>

<div class="sections" id="organizations_page">
    <div class="section_title">
        <p id="organization_name">Organizations (<%= organizations_count %>)</p>
    </div>
    <div class="icons_options">
        <button onclick="window.location = '<%= Uhuru::Webui::SinatraRoutes::ORGANIZATIONS_CREATE %>';" class="image s32px plus"></button>
    </div>

    <% organizations_list.each do |org| %>

      <div class="tile org">

        <div class="tile top">
          <a class="tile_action" href="<%= Uhuru::Webui::SinatraRoutes::ORGANIZATIONS + "/#{org.guid}/spaces" %>" title="<%= org.name %>">
                <%= org.name %>
          </a>

          <button type="button" id="<%= org.guid %>" class="image s24px trash" title="Delete '<%= org.name %>'"></button>
        </div>

        <div class="tile bottom">
          <div class="tile left">
            <div class="tile_action">
              <%= org.members_count %>
            </div>
            <div class="tile_info">members</div>
          </div>

          <div class="tile right">
            <div class="tile_action">
              $<%= org.cost %>
            </div>
            <div class="tile_info">monthly</div>
          </div>
        </div>
      </div>

    <% end %>
</div>

<div class="modal delete_confirmation org hide">
    <div class="modal_header">
        <span id="selected_name"></span>
    </div>

    <div class="modal_content">
        <p>
            Are you sure you want to delete this organization?
        </p>
        <p class="warning">
          WARNING: All contents of this organization will be removed! This action cannot be reversed.
        </p>
        <br />
    </div>

    <div class="modal_footer">
        <% unless error_message.nil? || error_message.empty? %>
            <div class="error"> <%= error_message %> </div>
        <% end %>

        <div>
          <form action="/deleteOrganization" method="post">
                <button type="button" class="cancel_button">Cancel</button>
                <button type="submit">Delete</button>
                <input type="hidden" id="selected_guid" name="orgGuid" />
            </form>
        </div>
    </div>
</div>

<% unless error_message.nil? || error_message.empty? %>
    <div class="modal error-message">
      <div class="modal_header">
        <span>Error</span>
      </div>

      <div class="modal_content">
        <p>
          An error has occurred:
        </p>
        <div class="error"> <%= error_message %> </div>
      </div>

      <div class="modal_footer">
          <button type="button" onclick="window.location = '<%= Uhuru::Webui::SinatraRoutes::ORGANIZATIONS %>';">Close</button>
      </div>
    </div>
<% end %>

<% if defined?(include_erb) && include_erb != nil %>
    <%= erb(include_erb, :layout => false, :locals => { :error_message => error_message }) %>
<% end %>

