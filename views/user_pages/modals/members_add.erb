<div class="dark_background"> </div>

<div class="modal fade" id="add_user">
  <div class="modal-header">
    <% if defined?(current_space) && current_space != nil %>
        <a href="<%= Uhuru::Webui::SinatraRoutes::ORGANIZATIONS + "/#{current_organization}/#{current_space}/members" %>" class="close"></a>
    <% else %>
        <a href="<%= Uhuru::Webui::SinatraRoutes::ORGANIZATIONS + "/#{current_organization}/members" %>" class="close"></a>
    <% end %>
    <h3>Invite user</h3>
    <br />
    <p>
      <strong>Note:</strong> Invitation only works with email addresses that are registered with Windows LiveID, GoogleID or Facebook.
      Please confirm this with the invitee before sending the invitation
    </p>
  </div>
  <div class="modal-body">
    <ul class="user_email_ul">
      <label for="inviteEmail">Email address</label>
      <input id="user_email" type="text" class="modal_input_box" onmousemove="prepareToAddNewUserEmail();" autofocus />
    </ul>

    <ul class="create_user_modal_ul" id="user_logos">
      <li class="user_modal_li"><img width="32" height="32"  src="<%= request.base_url %>/images/Gmail_logo.png" alt=""/>&nbsp;GoogleID</li>
      <li class="user_modal_li"><img width="32" height="32"  src="<%= request.base_url %>/images/msn_logo.png" alt=""/>&nbsp;Microsoft LiveID</li>
      <li class="user_modal_li"><img  width="32" height="32"  src="<%= request.base_url %>/images/facebook_logo.png" alt=""/>&nbsp;Facebook</li>
    </ul>

    <ul class="create_user_modal_ul" id="radio_buttons">
      <li><input type="radio" name="type" value="owner" id="owner" onclick="selectUserType(this);">Owner</li>
      <li><input type="radio" name="type" value="developer" id="developer" onclick="selectUserType(this);" checked>Developer</li>
      <li><input type="radio" name="type" value="manager" id="auditor" onclick="selectUserType(this);">Auditor</li>
    </ul>
  </div>
  <div class="modal-footer">
    <span class="server_errors" id="create_user_failed"><%= error_message %></span>
    <div class="button_case_create_organization_and_space">
      <form action="/addUser" method="post">
        <input type="hidden" id="new_user_type" name="userType" />
        <input type="hidden" id="new_user_email" name="userEmail" />
        <input type="hidden" name="current_organization" value="<%= current_organization %>" />
        <input type="hidden" name="current_space" value="<%= current_space %>" />
        <input type="hidden" name="current_tab" value="<%= current_tab %>" />
        <button type="submit" class="btn btn_right_create_organization_and_space ok"><span class="line">| </span>Invite User </button>
      </form>
    </div>
  </div>
</div>

