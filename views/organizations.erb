<div class="sections" id="organizations_page">
    <div class="manage_content_header">
        <h2 class="section_title">
            <span class="organizations_icon"></span><span id="organization_text">Organizations </span><span class="count">(<span><%= organizations_count  %></span>)</span>
        </h2>
        <a class="section_help" ref="tooltip" title="Your apps live here!">What is this?</a>
    </div>


  <ul class="tile_list">
    <% organizations_list.each do |org| %>
            <li class="tileblack">
                <a href="/organization<%= org.guid%>" class="link_tiles_org" title="<%= org.guid %>"><span class="to_be_underlined organization_name_span" title="<%= org.guid %>"><%= org.name %></span></a>

                <span class="organization_members_span"># of members: </span><span class="organization_members_span_value"><%= org.members_count %></span>
                <span class="organization_cost_span">monthly cost: </span><span class="organization_cost_span_value"><%= org.cost %></span>

                <a href="#"><span class="control-icon trash delete-organization-button" id="<%= org.name %>" title="<%= org.guid %>" onmousemove="setOrganizationGuid(this);"></span></a>

                <div id="organization_icons">
                    <span class="alien_icons"></span>
                    <span class="organization_cube"></span>
                    <span class="organization_key"></span>
                </div>
            </li>
    <% end %>

    <li class="new tile" id="create_organization_btn">
        <span class="icon"></span>
    </li>
  </ul>
</div>



<div class="modal hide" id="create_organization">
    <div class="modal-header">
        <button type="button" class="close">×</button>
        <h3>Create Organization</h3>
    </div>

    <form action="/createOrganization" method="post">
        <div class="modal-body">
            <p>
                <label for="org_name">Organization Name: </label>
                <input type="text" id="org_name" name="orgName"/>
            </p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn">Cancel</a>
            <input type="submit" value="Create" class="btn btn-success" />
            <%= @message %>
        </div>
    </form>
</div>


<div class="modal hide" id="delete_organization_modal" onmousemove="getOrganizationGuid()">
    <div class="modal-header">
        <button class="close">×</button>
        <h3>Delete cloud</h3>
    </div>
    <div class="modal-body">
        <p>
            Are you sure you want to delete the cloud "<span></span>"?
        </p>
        <br />
        <p>
            <strong>
                WARNING!!! All Spaces, applications and services in this organization will be DELETED!!! This action cannot be reversed.
            </strong>
        </p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn">No</a>

            <form action="/deleteClickedOrganization" method="post">
                <input type="submit" class="btn btn-danger yes_button" />
                <input type="text" id="pass_guid" name="orgGuid" style="display: none;" />
                <%= @message %>
            </form>

    </div>
</div>