<div class="sections" id="organization_page">

        <div class="manage_content_header">
            <h2 class="section_title">
                <span id="organization_name"><%= session[:currentOrganization_Name] %></span>

                <form action="/updateOrganization" method="post">
                    <input type="text" value="" id="organization_input" name="m_organizationName" class="modal_input_box tiped" />
                    <div class="tooltips">
                        <p>Press enter to update the new name!</p>
                    </div>
                    <input type="submit" style="display: none; width: 1px; height: 1px;" />
                </form>
            </h2>

            <div class="icons_options">
                <input type="button" value="" class="plus_sign_32 plus_sign_position_32" id="create_space_btn" />
                <input type="button" value="" class="plus_sign_32 plus_sign_position_32" id="add_user_btn_owner" onclick="prepareToAddNewUser(this.title)" title="owner" style="display: none;" />

                <input type="button" class="edit_sign_32 edit_sign_position_32" id="edit_space_btn" onclick="showOrganizationsInput();" />
                <input type="submit" class="trash_sign_32 trash_sign_position_32 delete_this_organization" value="" />

                <% if card_type == nil && card_masked_number == nil %>
                      <a href="/create_subscription" id="add_credit_card"><input type="button" class="money_sign_32 money_sign_position_32" id="" value="" /></a>
                <% end %>

            </div>
            <div id="credit_card_info_div">
              <% if card_type != nil && card_masked_number != nil %>
                  <%= card_type %>(type) &nbsp;&nbsp;&nbsp;&nbsp; <%= card_masked_number %>
              <% end %>
            </div>
        </div>

         <div id="organization_div">
                <ul id="tabs" class="nav nav-tabs">
                    <li onclick="showSpaces();" id="spaces_btn_link">Spaces (<span><%= spaces_count %></span>)</li>
                    <li onclick="showMembers();" id="members_btn_link">Members (<span><%= members_count %></span>)</li>
                </ul>

                <div id="spaces">
                    <ul class="tile_list">

                        <% spaces_list.each do |space| %>
                                <li class="tile_invisible">
                                  <ul class="custom_list">
                                        <li class="tile_space_name" title="<%= space.name %>">
                                            <a href="/space<%= space.guid %>" class="link_tiles_space">
                                                <span class="space_name_span to_underlined"><%= space.name %></span>
                                                <a href="#"><span class="small_trash delete-space-button" id="<%= space.name %>" title="<%= space.guid %>" onmousemove="prepareToDeleteSpace(this);"></span></a>
                                            </a>
                                        </li>

                                        <li class="tile_space_apps">
                                            <span class="count-label apps apps_count_span">#apps: </span><span class="count-value apps apps_count_span_value"><%= space.apps_count %></span>
                                            <span class="count-label services services_count_span">#services: </span><span class="count-value services services_count_span_value"><%= space.services_count %></span>
                                        </li>

                                        <li class="tile_space_mothly_cost">
                                            <span class="costs_span">cost:</span><span class="costs_span_value"><!--# space.total_cost -->0</span>
                                            <span class="span_cost_icon"></span>
                                        </li>
                                  </ul>
                                </li>
                        <% end %>

                    </ul>

                <div style="height: 250px; width: 100%"></div>
                </div>

                <div id="members">
                        <ul class="tile_list">
                          <% owners_list.each do |owner| %>
                            <li class="tile_user_owner" title="<%= owner.email %>">
                                <span class="user_name_span"><%= owner.email %></span>
                                <span class="user_type_span">Owner</span>
                                <a href="#"><span class="small_trash delete-user-button" id="<%= owner.guid %>" title="<%= owner.email %>" onmousemove="prepareToDeleteOwner(this);"></span></a>

                                <span class="span_bg_icon"></span>
                            </li>
                          <% end %>

                          <% billings_list.each do |billing| %>
                            <li class="tile_user_developer" title="<%= billing.email %>">
                                <span class="user_name_span"><%= billing.email %></span>
                                <span class="user_type_span">Billing Manager</span>
                                <a href="#"><span class="small_trash delete-user-button" id="<%= billing.guid %>" title="<%= billing.email %>" onmousemove="prepareToDeleteBillingManager(this);"></span></a>

                                <span class="span_bg_icon"></span>
                            </li>
                          <% end %>

                          <% auditors_list.each do |auditor| %>
                            <li class="tile_user_manager" title="<%= auditor.email %>">
                                <span class="user_name_span"><%= auditor.email  %></span>
                                <span class="user_type_span">Auditor</span>
                                <a href="#"><span class="small_trash delete-user-button" id="<%= auditor.guid %>" title="<%= auditor.email %>" onmousemove="prepareToDeleteAuditor(this);"></span></a>

                                <span class="span_bg_icon"></span>
                            </li>
                          <% end %>
                        </ul>
                    <div style="height: 50px; width: 100%"></div>
                </div>

         </div>

<div class="modal hide" id="add_credit_card_to_organization_modal">
    <div class="modal-header">
        <button class="close"></button>
        <h3>Add credit card</h3>
    </div>

    <div class="modal-body">
        <br />
            <p>
                Are you sure you want to add this credit card to the organization ?
            </p>
        <br />
    </div>

    <div class="modal-footer">
    <span class="server_errors" id="add_credit_failed"><%= session[:e_add_credit] %></span>
    <p class="hidden_modal_messages" id="p_add_credit">Adding credit card...</p>
        <div class="button_case_delete_organization_and_space">
            <button type="button" class="btn btn_right_delete_organization_and_space cancel" id="cancel_b_add_credit"><span class="line">| </span>Cancel </button>
            <form action="/addCreditCardToOrganization" method="post">
                <button type="submit" class="btn btn_left_delete_organization_and_space danger" id="b_add_credit"><span class="line">| </span>Add </button>
                <input type="text" name="cardId" id="pass_credit_card_add_id" class="blank_input" />
            </form>
        </div>
    </div>
</div>

<div class="modal hide" id="create_space">
    <div class="modal-header">
        <button type="button" class="close"></button>
        <h3>Create Space</h3>
    </div>
    <form action="/createSpace" method="post">

        <div class="modal-body">
             <p>
                <label for="team_name">Space Name:</label>
                <input type="text" id="org_name" name="spaceName" class="modal_input_box space_name_i" />
            </p>
        </div>
        <div class="modal-footer">
            <span class="server_errors" id="create_space_failed"><%= session[:e_create_space] %></span>
            <div class="button_case_create_organization_and_space">
                <button type="button" class="btn btn_right_create_organization_and_space cancel" id="cancel_b_c_space"><span class="line">| </span>Cancel </button>
                <button type="submit" value="Create" class="btn btn_left_create_organization_and_space ok" id="b_c_space"><span class="line">| </span>Create </button>
                <p class="hidden_modal_messages" id="p_c_space">Please wait...</p>
            </div>
        </div>

    </form>
</div>

<div class="modal hide" id="delete_space_modal">
    <div class="modal-header">
        <button class="close"></button>
        <h3>Delete Space</h3>
    </div>
    <div class="modal-body">
        <p>
            Are you sure you want to delete the space "<span id="this_space_name"></span>"?
        </p>
        <br />
        <p>
            <strong>
                WARNING! All applications and services in this space will be deleted! This action cannot be reversed.
            </strong>
        </p>
    </div>
    <div class="modal-footer">
        <span class="server_errors blank_input" id="delete_space_failed"><%= session[:e_delete_space] %></span>
        <p class="hidden_modal_messages" id="p_d_space">Deleting...</p>
        <div class="button_case_delete_organization_and_space">
            <button type="button" class="btn btn_right_delete_organization_and_space cancel" id="cancel_b_d_space"><span class="line">| </span>Cancel </button>
            <form action="/deleteClickedSpace" method="post">
                <button type="submit" class="btn btn_left_delete_organization_and_space danger" id="b_d_space"><span class="line">| </span>Delete </button>
                <input type="text" id="pass_guid" name="spaceGuid" style="display: none;" />
            </form>
        </div>
    </div>
</div>

<div class="modal hide" id="delete_user_modal">
    <div class="modal-header">
        <button class="close"></button>
        <h3>Delete User</h3>
    </div>
    <div class="modal-body">
        <p>
            Are you sure you want to delete this user <span id="this_user_name"></span>?
        </p>
    </div>
    <div class="modal-footer">
        <span class="server_errors blank_input" id="delete_user_failed"><%= session[:e_delete_user] %></span>
        <p class="hidden_modal_messages" id="p_delete_user">Deleting...</p>
        <div class="button_case_delete_organization_and_space">
            <button type="button" class="btn btn_right_delete_organization_and_space cancel" id="cancel_b_delete_user"><span class="line">| </span>Cancel </button>
            <form action="/deleteUser" method="post">
                <input type="text" class="blank_input" id="pass_user_guid" value="" name="thisUser"/>
                <input type="text" class="blank_input" id="pass_user_role" value="" name="thisUserRole"/>
                <button type="submit" class="btn btn_left_delete_organization_and_space danger" id="b_delete_user"><span class="line">| </span>Delete </button>
            </form>
        </div>
    </div>
</div>

<div class="modal hide" id="delete_this_organization_modal">
    <div class="modal-header">
        <button class="close"></button>
        <h3>Delete organization</h3>
    </div>
    <div class="modal-body">
        <p>
            Are you sure you want to delete this organization?
        </p>
        <br />
        <p>
            <strong>
                WARNING! All Spaces, applications and services in this organization will be deleted! This action cannot be reversed.
            </strong>
        </p>
    </div>
    <div class="modal-footer">
    <span class="server_errors" id="delete_this_organization_failed"><%= session[:e_delete_organization] %></span>
    <p class="hidden_modal_messages" id="p_d_organization">Deleting...</p>
        <div class="button_case_delete_organization_and_space">
            <button class="btn btn_right_delete_organization_and_space cancel" id="cancel_b_d_organization"><span class="line">| </span>Cancel </button>
            <form action="/deleteCurrentOrganization" method="post">
                <button type="submit" class="btn btn_left_delete_organization_and_space danger" id="b_d_organization"><span class="line">| </span>Delete </button>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="add_user">
    <div class="modal-header">
        <button class="close"></button>
        <h3>Invite user</h3>
            <br />
            <p>
                <strong>Note:</strong> Invitation only works with email addresses that are registered with Windows LiveID, GoogleID or Facebook.
                Please confirm this with the invitee before sending the invitation
            </p>
    </div>
    <div class="modal-body">
            <ul class="user_email_ul">
                <label for="inviteEmail">Email address</label>
                <input id="user_email" type="text" class="modal_input_box" onmousemove="prepareToAddNewUserEmail();" />
            </ul>

            <script type="text/javascript">
                $("[id$='user_email']").autocomplete({
                            source: <%= all_users %>
                        });
            </script>

            <ul class="create_user_modal_ul" id="user_logos">
                <li class="user_modal_li"><img width="32" height="32"  src="../images/Gmail_logo.png" alt=""/>&nbsp;GoogleID</li>
                <li class="user_modal_li"><img width="32" height="32"  src="../images/msn_logo.png" alt=""/>&nbsp;Microsoft LiveID</li>
                <li class="user_modal_li"><img  width="32" height="32"  src="../images/facebook_logo.png" alt=""/>&nbsp;Facebook</li>
            </ul>

            <ul class="create_user_modal_ul" id="radio_buttons">
                <li><input type="radio" name="type" value="owner" id="owner" onclick="selectUserType(this);">Owner</li>
                <li><input type="radio" name="type" value="developer" id="billing" onclick="selectUserType(this);">Billing Manager</li>
                <li><input type="radio" name="type" value="manager" id="auditor" onclick="selectUserType(this);">Auditor</li>
            </ul>
    </div>
    <div class="modal-footer">
        <p class="hidden_modal_messages" id="p_add_user">Please wait...</p>
        <span class="server_errors" id="create_user_failed"><%= session[:e_create_user] %></span>
        <div class="button_case_create_organization_and_space">
            <form action="/addUsers" method="post">
                <input type="text" id="new_user_type" name="userType" class="blank_input" />
                <input type="text" id="new_user_email" name="userEmail" class="blank_input" />
                <button type="submit" class="btn btn_right_create_organization_and_space ok" id="b_add_user"><span class="line">| </span>Invite User </button>
            </form>
        </div>
    </div>
</div>

</div>