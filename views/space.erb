                                <label name="<%= app.framework %>"></label>
                            </a>
                        </li>
                      <% end %>

                        <li class="new tile" id="create_app">
                            <span class="icon"></span>
                        </li>
                    </ul>
                </div>
           <!--// //-->

           <!--THIS IS THE SERVICES TAB THAT NEEDS A LOOP TO READ ALL SERVICES AND A SCRIPT TO ADD MORE SERVICES-->


                <div id="services" class="tab-pane">
                    <ul class="tile_list">

                        <% services_list.each do |service| %>
