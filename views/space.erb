<div class="sections" id="space_page">

        <div class="manage_content_header">
            <h2 class="section_title">
                <span class="organizations_icon"></span>

                <span id="space_name"><%= $currentSpace_Name %></span>

                <form action="/updateSpace" method="post">
                    <input type="text" value="" id="space_input" maxlength="20" name="m_spaceName"/>
                    <input type="submit" style="display: none; width: 1px; height: 1px;">
                </form>

            </h2>
            <div class="icons_options">
                <span class="control-icon-large edit" onclick="showSpacesInput();">Edit</span>

                <form action="/deleteCurrentSpace" method="post">
                        <input type="submit" class="control-icon-large trash">
                </form>

              <span class="title_icon" style="position: absolute; top:0px; right: -15px;">dollar</span>
            </div>
        </div>

         <div id="team_tabs">

           <!--THIS IS THE UL THAT CONTAINS THE 3 TABS-->

           <ul id="spaces_tabs" class="nav nav-tabs">
                <li onclick="showApps();" id="apps_li" onmouseover="hoverApps();" onmouseout="unhoverApps();">Apps (<span><%= apps_count %></span>)</li>
                <li onclick="showServices();" id="services_li" onmouseover="hoverServices();" onmouseout="unhoverServices();">Services (<span><%= services_count %></span>)</li>
                <li onclick="showSubscriptions();" id="subscriptions_li" onmouseover="hoverSubscriptions();" onmouseout="unhoverSubscribtions();">Subscriptions (<span>---</span>)</li>
            </ul>
           <!--// //-->

           <!--THIS IS THE APPS TAB THAT NEEDS A LOOP TO READ APPS AND A SCRIPT TO ADD A NEW APP-->
                <div id="apps" class="tab-pane">
                    <ul class="tile_list">

                      <% apps_list.each do |app| %>
                        <li class="tileblue show_this_app_details app-<%= app.runtime %>" id="<%= app.name %>"> <!--  FOR EACH APP ID THE DETAILS SHOULD SPAWN NOT ONLY FOR THE FIRST TILE  -->

                            <span class="app_name"><%= app.name %></span>

                            <a href="#">
                                <span class="control-icon trash delete-app-button" id="<%= app.name %>" title="<%= app.name %>" onmousemove="setAppGuid(this);"></span>
                                <span class="app_state" id="<%= app.state %>"></span>
                                <span class="app_instances" id="<%= app.instances %>"></span>
                                <span class="app_memory" id="<%= app.memory %>"></span>
                                <span class="app_services" id="<%= app.services %>"></span>
                            </a>

                        </li>
                      <% end %>

                        <li class="new tile" id="create_app">
                            <span class="icon"></span>
                        </li>
                    </ul>
                </div>
           <!--// //-->

           <!--THIS IS THE SERVICES TAB THAT NEEDS A LOOP TO READ ALL SERVICES AND A SCRIPT TO ADD MORE SERVICES-->


                <div id="services" class="tab-pane">
                    <ul class="tile_list">

                        <% services_list.each do |service| %>
                        <li class="tileblue">
                            <span>
                                <span class="service_name"><%= service.name %></span>
                                <a href="#"><span class="control-icon trash delete-service-button" id="<%= service.name %>" title="<%= service.guid %>" onmousemove="setServiceGuid(this);"></span></a>
                            </span>
                        </li>
                        <% end %>


                        <li class="new tile" id="add_ctService_modal_btn">
                            <span class="icon"></span>
                        </li>
                    </ul>
                </div>
           <!--// //-->



       <!--THIS IS THE SUBSCRIPTION TAB THAT NEEDS SOME MORE SCRIPTS-->


                <div id="subscriptions">
                    <div id="subscriptions_memory">
                       <div class="services_subdiv">
                            <span class="plusminus_class">
                                  <span class="app-services minus" style="float: none" id="minus_memory"></span>
                                  <span class="app-services plus" style="float: none" id="plus_memory"></span>
                            </span>
                            <p class="subscriptions_titles_p">Memory</p>
                       </div>

                          <ul class="tile_list">
                            <li class="tile_blue_small">
                                <span>
                                    <span class="memory_unit">GB</span>
                                    <span class="memory_unit_number" id="memory_number">0</span>
                                </span>
                            </li>

                            <div id="memory_slider">
                                    <div id="memory_slider_bar2" class="app-value-slider">
                                      >>>>> slider >>>>>>>>>
                                    </div>
                                    Max memory: 1024MB
                            </div>
                           </ul>
                    </div>

                  <!--HERE WE SHOULD HAVE 0 BLOCKS OF HTML LIST ITEMS, WE SHOULD HAVE A LOOP TO READ ALL SERVICES INSTEAD-->

                    <div id="subscriptions_services">
                        <div class="services_subdiv">
                            <span class="plusminus_class">
                                  <span class="app-services minus" style="float: none"></span>
                                  <span class="app-services plus" style="float: none" id="plus_service"></span>
                            </span>
                            <p class="subscriptions_titles_p">Services</p>
                        </div>

                        <ul class="tile_list">
                            <li class="tile_darkblue_dark">
                                <span>
                                    <div class="subscribtions_background_image_mssql"></div>
                                    <span class="subscribtions_plan">plan: <span class="subscribtions_plan_value">100 MB Buffer</span></span>
                                    <span class="subscribtions_quality">quality: <span class="subscribtions_quality_value">2</span></span>
                                    <span class="subscribtions_cost">cost: <span class="subscribtions_cost_value">$500</span></span>
                                    <span class="control-icon trash delete-service-button"></span>
                                </span>
                            </li>
                            <li class="tile_darkblue_dark">
                                <span>
                                    <div class="subscribtions_background_image_redis"></div>
                                    <span class="subscribtions_plan">plan: <span class="subscribtions_plan_value">300 MB Buffer</span></span>
                                    <span class="subscribtions_quality">quality: <span class="subscribtions_quality_value">233</span></span>
                                    <span class="subscribtions_cost">cost: <span class="subscribtions_cost_value">$180</span></span>
                                    <span class="control-icon trash delete-service-button"></span>
                                </span>
                            </li>
                            <li class="tile_darkblue_dark">
                                <span>
                                    <div class="subscribtions_background_image_mysql"></div>
                                    <span class="subscribtions_plan">plan: <span class="subscribtions_plan_value">10 MB Buffer</span></span>
                                    <span class="subscribtions_quality">quality: <span class="subscribtions_quality_value">22323</span></span>
                                    <span class="subscribtions_cost">cost: <span class="subscribtions_cost_value">$200</span></span>
                                    <span class="control-icon trash delete-service-button"></span>
                                </span>
                            </li>
                            <li class="tile_darkblue_dark">
                                <span>
                                    <div class="subscribtions_background_image_ruby"></div>
                                    <span class="subscribtions_plan">plan: <span class="subscribtions_plan_value">10333 MB Buffer</span></span>
                                    <span class="subscribtions_quality">quality: <span class="subscribtions_quality_value">2231231</span></span>
                                    <span class="subscribtions_cost">cost: <span class="subscribtions_cost_value">$5300</span></span>
                                    <span class="control-icon trash delete-service-button"></span>
                                </span>
                            </li>
                        </ul>

                  <!--// //-->

                    </div>
                </div>


       <!--// //-->

</div>


<!--END OF THE PAGE-->

